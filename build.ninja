# File: build.ninja
# Purpose: Build the project
# SPDX-License-Identifier: GPL-3.0-or-later

rule cxx
  command = clang++ -Iinclude -O2 -std=c++11 -fno-rtti -fno-exceptions -nostdinc++ -Wall -Wextra -c $in -o $out
  description = CXX $out

rule cc
  command = clang -Iinclude -O2 -std=c11 -Wall -Wextra -c $in -o $out
  description = CC $out

rule link
  command = clang $in -o $out
  description = LINK $out

rule asm
  command = clang -O2 -c $in -o $out
  description = ASM $out

rule ar
  command = ar rv $out $in
  description = AR $out

build libminimk/assert/assert.o: cc libminimk/assert/assert.c

build libminimk/errno/errno_linux.o: cc libminimk/errno/errno_linux.c

build libminimk/poll/poll_linux.o: cxx libminimk/poll/poll_linux.cpp

build libminimk/runtime/runtime.o: cxx libminimk/runtime/runtime.cpp
build libminimk/runtime/socket.o: cxx libminimk/runtime/socket.cpp
build libminimk/runtime/stack_linux.o: cxx libminimk/runtime/stack_linux.cpp
build libminimk/runtime/switch_linux_amd64.o: asm libminimk/runtime/switch_linux_amd64.S
build libminimk/runtime/trace.o: cc libminimk/runtime/trace.c

build libminimk/socket/socket_linux.o: cxx libminimk/socket/socket_linux.cpp

build libminimk/time/monotonic_linux.o: cxx libminimk/time/monotonic_linux.cpp

build libminimk.a: ar $
  libminimk/assert/assert.o $
  libminimk/errno/errno_linux.o $
  libminimk/poll/poll_linux.o $
  libminimk/runtime/runtime.o $
  libminimk/runtime/socket.o $
  libminimk/runtime/stack_linux.o $
  libminimk/runtime/switch_linux_amd64.o $
  libminimk/runtime/trace.o $
  libminimk/socket/socket_linux.o $
  libminimk/time/monotonic_linux.o

build examples/runtime/00_coroutine_hello.o: cc examples/runtime/00_coroutine_hello.c
build examples/runtime/00_coroutine_hello.exe: link examples/runtime/00_coroutine_hello.o libminimk.a

build examples/runtime/01_coroutine_pingpong.o: cc examples/runtime/01_coroutine_pingpong.c
build examples/runtime/01_coroutine_pingpong.exe: link examples/runtime/01_coroutine_pingpong.o libminimk.a

build examples/runtime/02_coroutine_sleep.o: cc examples/runtime/02_coroutine_sleep.c
build examples/runtime/02_coroutine_sleep.exe: link examples/runtime/02_coroutine_sleep.o libminimk.a

build examples/runtime/03_echo_server.o: cc examples/runtime/03_echo_server.c
build examples/runtime/03_echo_server.exe: link examples/runtime/03_echo_server.o libminimk.a

build examples/socket/00_echo_server_blocking.o: cc examples/socket/00_echo_server_blocking.c
build examples/socket/00_echo_server_blocking.exe: link examples/socket/00_echo_server_blocking.o libminimk.a

build examples/time/00_monotonic.o: cc examples/time/00_monotonic.c
build examples/time/00_monotonic.exe: link examples/time/00_monotonic.o libminimk.a
